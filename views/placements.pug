doctype html
html(lang="en")
  head
    title="Ad Placements"
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link(href='/css/bootstrap.css', rel='stylesheet')
    link(href='/css/app.css', rel='stylesheet')

  body(class='d-flex flex-column bg-light')
    .container.m-auto
      div(class='placements-container bg-white rounded p-4 mx-auto border')
        h5.text-center Chose Ad Placement
        ul.list-group.my-3
          each placement in placements
            li.list-group-item.d-flex.align-items-center.cp(data-sku-id=placement.skuId)
              span=placement.title
              span.badge.badge-success.ml-auto= 'USD ' + placement.price

        a.btn.btn-primary.btn-block.font-weight-bold#btn-continue(href='#') Continue


    script(src='/js/placements.js', type='text/javascript')
